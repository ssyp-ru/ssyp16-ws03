<div class="center-align " ng-app="IFKApp" ng-controller="LoginCtrl as ctrl">
    <h3> Login </h3>

    <div class="row">
        <from class="offset-s4 col s4">
            <div class="input-field">
                <input id="InputEmail" type="email" class="validate" ng-model="ctrl.Email">
                <label for="InputEmail" class="active left-align"> Email </label>
            </div>

            <div class="input-field">
                <input id="InputPassword" type="password" class="validate" ng-model="ctrl.Password">
                <label for="InputPassword" class="active left-align"> Password </label>
            </div>
        </from>
    </div>

    <div class="row">
        <div class="offset-s4 col s2">
            <a href="" onclick="$('#ResetPasswordModal').openModal()"> Forgot password? </a>
        </div>

        <div class="col s2">
            <a ng-href="#/auth/signup"> Sign up </a>
        </div>
    </div>

    <br>

    <button class="waves-effect waves-light btn" ng-click="ctrl.Login()"> Send </button>

    <!-- MODALS -->
    <div class="modal" id="ResetPasswordModal">
        <div class="modal-content">
            <h5 class="header-teal"> Reset password </h5>

            <div class="input-field">
                <input id="InputEmail" type="email" class="validate" ng-model="ctrl.Email">
                <label for="InputEmail" class="active left-align"> Your email </label>
            </div>
        </div>

        <div class="modal-footer row">
            <div class="offset-s5 col s2">
                <a href="" class="modal-action modal-close waves-effect waves-light btn" ng-click="ctrl.ResetPassword()"> Accept </a>
            </div>
        </div>
    </div>
</div>